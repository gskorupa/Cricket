{
    "@type": "org.cricketmsf.config.ConfigSet",
    "description": "This is sample configuration",
    "services": [
        {
            "@type": "org.cricketmsf.config.Configuration",
            "id": "echo",
            "service": "org.cricketmsf.services.EchoService",
            "properties": {
                "host": "0.0.0.0",
                "port": "8080",
                "threads": "0",
                "filter": "org.cricketmsf.SecurityFilter",
                "cors": "Access-Control-Allow-Origin:*",
                "time-zone": "GMT"
            },
            "adapters": {
                "EchoAdapter": {
                    "name": "EchoAdapter",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/echo",
                        "silent-mode": "false"
                    }
                },
                "TestScheduler": {
                    "name": "TestScheduler",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/scheduler"
                    }
                },
                "LoggerAdapterIface": {
                    "name": "LoggerAdapterIface",
                    "interfaceName": "LoggerAdapterIface",
                    "classFullName": "org.cricketmsf.out.log.StandardLogger",
                    "properties": {
                        "name": "EchoService",
                        "level": "FINEST",
                        "log-file-name": "./data/cricket.log",
                        "console": "true"
                    }
                },
                "KeyValueCacheAdapterIface": {
                    "name": "KeyValueCacheAdapterIface",
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "org.cricketmsf.out.db.KeyValueStore",
                    "properties": {
                        "path": "./data",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "echo.xml",
                        "max-records": "10",
                        "persistent": "false"
                    }
                },
                "SchedulerIface": {
                    "name": "SchedulerIface",
                    "interfaceName": "SchedulerIface",
                    "classFullName": "org.cricketmsf.in.scheduler.Scheduler",
                    "properties": {
                        "path": "./data",
                        "envVariable": "SCHEDULER_DB_PATH",
                        "file": "scheduler.xml"
                    }
                },
                "HtmlGenAdapterIface": {
                    "name": "HtmlGenAdapterIface",
                    "interfaceName": "HtmlGenAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.HtmlGenAdapter",
                    "properties": {
                        "context": "/",
                        "use-cache": "false",
                        "page-processor": "false"
                    }
                },
                "FileReaderAdapterIface": {
                    "name": "FileReaderAdapterIface",
                    "interfaceName": "FileReaderAdapterIface",
                    "classFullName": "org.cricketmsf.out.file.FileReaderAdapter",
                    "properties": {
                        "root": "./www/"
                    }
                },
                "EnvironmentAdapter": {
                    "name": "EnvironmentAdapter",
                    "interfaceName": "EnvironmentMonitorIface",
                    "classFullName": "org.cricketmsf.in.monitor.EnvironmentMonitor",
                    "properties": {
                        "sampling-interval": "1000",
                        "disk-path": "/",
                        "disk-limit": "10M",
                        "memory-limit": "100M"                        
                    }
                }
            }
        },
        {
            "@type": "org.cricketmsf.config.Configuration",
            "id": "echo-silent",
            "service": "org.cricketmsf.services.EchoService",
            "host": "0.0.0.0",
            "port": "8080",
            "threads": 0,
            "filter": "org.cricketmsf.SecurityFilter",
            "properties": {
                "time-zone": "GMT"
            },
            "adapters": {
                "EchoAdapter": {
                    "name": "EchoAdapter",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/echo",
                        "silent-mode": "true"
                    }
                },
                "TestScheduler": {
                    "name": "TestScheduler",
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/scheduler"
                    }
                },
                "LoggerAdapterIface": {
                    "name": "LoggerAdapterIface",
                    "interfaceName": "LoggerAdapterIface",
                    "classFullName": "org.cricketmsf.out.log.StandardLogger",
                    "properties": {
                        "name": "EchoService",
                        "level": "INFO",
                        "log-file-name": ""
                    }
                },
                "KeyValueCacheAdapterIface": {
                    "name": "KeyValueCacheAdapterIface",
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "org.cricketmsf.out.db.KeyValueStore",
                    "properties": {
                        "path": "./data",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "echo.xml",
                        "max-records": "10",
                        "persistent": "false"
                    }
                },
                "SchedulerIface": {
                    "name": "SchedulerIface",
                    "interfaceName": "SchedulerIface",
                    "classFullName": "org.cricketmsf.in.scheduler.Scheduler",
                    "properties": {
                        "path": "./data",
                        "envVariable": "SCHEDULER_DB_PATH",
                        "file": "scheduler.xml"
                    }
                },
                "HtmlGenAdapterIface": {
                    "name": "HtmlGenAdapterIface",
                    "interfaceName": "HtmlGenAdapterIface",
                    "classFullName": "org.cricketmsf.in.http.HtmlGenAdapter",
                    "properties": {
                        "context": "/"
                    }
                },
                "FileReaderAdapterIface": {
                    "name": "FileReaderAdapterIface",
                    "interfaceName": "FileReaderAdapterIface",
                    "classFullName": "org.cricketmsf.out.file.FileReaderAdapter",
                    "properties": {
                        "root": "./www/"
                    }
                },
                "EnvironmentAdapter": {
                    "name": "EnvironmentAdapter",
                    "interfaceName": "EnvironmentMonitorIface",
                    "classFullName": "org.cricketmsf.in.monitor.EnvironmentMonitor",
                    "properties": {
                        "sampling-interval": "1000",
                        "disk-path": "/",
                        "disk-limit": "10M",
                        "memory-limit": "100M"                        
                    }
                }
            }
        }
    ]
}