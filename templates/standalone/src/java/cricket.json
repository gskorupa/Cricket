{
    "@type": "com.gskorupa.cricket.config.ConfigSet",
    "id": "new",
    "description": "This is sample configuration",
    "services": [
        {
            "@type": "com.gskorupa.cricket.config.Configuration",
            "service": "com.example.service.BasicService",
            "host": "0.0.0.0",
            "port": "8080",
            "threads": 0,
            "adapters": {
                "EchoHttpAdapterIface": {
                    "interfaceName": "EchoHttpAdapterIface",
                    "classFullName": "com.gskorupa.cricket.in.http.EchoHttpAdapter",
                    "properties": {
                        "context": "/echo"
                    }
                },
                "LoggerAdapterIface": {
                    "interfaceName": "LoggerAdapterIface",
                    "classFullName": "com.gskorupa.cricket.out.log.StandardLogger",
                    "properties": {
                        "name": "EchoService",
                        "level": "ALL"
                    }
                },
                "KeyValueCacheAdapterIface": {
                    "interfaceName": "KeyValueCacheAdapterIface",
                    "classFullName": "com.gskorupa.cricket.out.db.KeyValueStore",
                    "properties": {
                        "path": "./db",
                        "envVariable": "ECHO_DB_PATH",
                        "file": "echo.xml",
                        "max-records": "100"
                    }
                },
                "SchedulerIface": {
                    "interfaceName": "SchedulerIface",
                    "classFullName": "com.gskorupa.cricket.in.scheduler.Scheduler",
                    "properties": {
                        "path": "./db",
                        "envVariable": "SCHEDULER_DB_PATH",
                        "file": "scheduler.xml"
                    }
                },
                "HtmlReaderAdapterIface": {
                    "interfaceName": "HtmlReaderAdapterIface",
                    "classFullName": "com.gskorupa.cricket.out.html.HtmlReaderAdapter",
                    "properties": {
                        "root": "./www/"
                    }
                },
                "HtmlGenAdapterIface": {
                    "interfaceName": "HtmlGenAdapterIface",
                    "classFullName": "com.gskorupa.cricket.in.http.HtmlGenAdapter",
                    "properties": {
                        "context": "/"
                    }
                }
            }
        }
    ]
}